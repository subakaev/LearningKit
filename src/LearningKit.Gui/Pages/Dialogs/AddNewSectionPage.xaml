<Page x:Class="LearningKit.Gui.Pages.Dialogs.AddNewSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearningKit.Gui.Pages.Dialogs"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Содание нового раздела">

    <StackPanel Margin="10">
        <Label>Название:</Label>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" VerticalAlignment="Center" FontSize="20" />
            <Button VerticalAlignment="Center" Margin="5 0 0 0" Padding="5">Создать</Button>
        </StackPanel>
    </StackPanel>
</Page>
