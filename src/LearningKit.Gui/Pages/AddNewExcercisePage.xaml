<Page x:Class="LearningKit.Gui.Pages.AddNewExcercisePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearningKit.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddNewExcercisePage">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBox Height="100" MaxLines="10" AcceptsReturn="True" TextWrapping="Wrap" Name="TextBox"></TextBox>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <Button Click="ButtonBase_OnClick">Preview</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <WebBrowser Height="100" Name="WebBrowser" Source="http://yandex.ru"></WebBrowser>
        </StackPanel>
    </DockPanel>
</Page>
