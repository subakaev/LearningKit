<Window x:Class="LearningKit.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LearningKit.Gui.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">
    <DockPanel>
        <Button Command="{Binding ShowAddNewTaskPageCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top">Добавить</Button>
        <Frame Name="Frame" NavigationUIVisibility="Hidden" DockPanel.Dock="Top" />
    </DockPanel>
</Window>
